// utils/callNotionAPI.js
import fetch from 'node-fetch';

// Function to make calls to the Notion API
export default async function callNotionAPI(path, method, body = {}) {
  try {
    const response = await fetch(`https://api.notion.com/v1${path}`, {
      method,
      headers: {
        'Authorization': `Bearer ${process.env.NOTION_API_KEY}`,
        'Content-Type': 'application/json',
        'Notion-Version': '2022-06-28',
      },
      body: Object.keys(body).length ? JSON.stringify(body) : null,
    });

    if (!response.ok) {
      const errorDetails = await response.json();
      throw new Error(`Notion API Error: ${response.status} ${response.statusText} - ${JSON.stringify(errorDetails)}`);
    }

    return await response.json();
  } catch (error) {
    console.error(`Error calling Notion API: ${error.message}`);
    throw error;
  }
}
